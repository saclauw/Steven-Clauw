@model int

<td style="width:150px">
    <div class="btn-group" role="group">
        <a class="btn btn-primary text-black-50-white" asp-action="Edit" asp-route-Id="@Model">
            <i class="fas fa-edit"></i>
        </a>

        <a class="btn btn-success text-black-50-white" asp-action="Details" asp-route-Id="@Model">
            <i class="fas fa-list"></i>
        </a>

        <a class="btn btn-danger text-black-50-white" asp-action="Delete" asp-route-Id="@Model">
            <i class="fas fa-trash-alt"></i>
        </a>



    </div>

</td>