@model IEnumerable<Coupon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<body class="search-background">
</body>
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Coupon List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {

            <table class="table table-striped border">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.MinumumAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.IsActive)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var coupon in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => coupon.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => coupon.Discount)
                </td>
                <td>
                    @Html.DisplayFor(m => coupon.MinumumAmount)
                </td>
                <td>
                    @Html.DisplayFor(m => coupon.IsActive)
                </td>

                <td>
                    <partial name="_TableButtonPartial" model="coupon.Id"/>
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>No coupon exists...</p>
        }
    </div>
</div>

